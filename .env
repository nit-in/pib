function pdftxt(){

	home_dir="/home/runner"
	pib_dir="$home_dir/pib/articles"
	pib_text_dir="$home_dir/pib_text"

	mkdir -p $pib_dir;
	mkdir -p $pib_text_dir;
	
	cd $pib_dir;
	
	for i in $(fd -e pdf); do
		echo $i;
		pdftotext $i;
	done

	for j in $(fd -e txt); do
		echo $j;
		cp -R -u --parents $j $pib_text_dir;
		rm -f $j;
	done
	cd $home_dir
}

function err_handle(){

	err_code=$1
	err_desc=$2
	echo -e "\nError ${err_code} : ${err_desc}"
	true
}

